# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (for server-side)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_client_email
FIREBASE_ADMIN_PRIVATE_KEY=your_private_key

# Firebase Extensions (for payments)
FIREBASE_EXTENSION_PAYMENT_API_KEY=your_payment_api_key
FIREBASE_EXTENSION_PAYMENT_SECRET=your_payment_secret

# Vercel Blob Storage Token
# For local development, create a blob store at https://vercel.com/dashboard/stores
# and copy the token here. In production, this is automatically provided.
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token_here 

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database (Vercel Postgres)
# Create a postgres database at https://vercel.com/dashboard/stores
# and copy the connection strings here
POSTGRES_URL=postgres://default:password@host:5432/verceldb?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://default:password@host:5432/verceldb?sslmode=require

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Railway-specific configurations
# Path to Chromium executable (set automatically by Railway)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser 