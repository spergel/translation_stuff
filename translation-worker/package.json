{
  "name": "translation-worker",
  "version": "1.0.0",
  "description": "Worker for handling translation tasks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-pdfjs",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "verify-pdfjs": "ls -la node_modules/pdfjs-dist/build/",
    "copy-pdfjs": "mkdir -p dist && cp node_modules/pdfjs-dist/build/pdf.worker.js dist/"
  },
  "dependencies": {
    "bullmq": "^5.1.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "pdfjs-dist": "2.16.105",
    "sharp": "^0.33.2",
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
} 